---
import Layout from "@layouts/Layout.astro";
const posts = await Astro.glob("@pages/posts/*.mdx");
posts.sort((a, b) => new Date(b.frontmatter.pubDate) - new Date(a.frontmatter.pubDate));
---

<Layout>
	<ul style="list-style: none; padding: 0;">
		{
			posts.map((post) => (
				<li class="post">
					<h2><a href={post.url}>{post.frontmatter.title}</a></h2>
					<time datetime={new Date(post.frontmatter.pubDate).toISOString()}>
						{new Date(post.frontmatter.pubDate).toDateString()}
					</time>
					<p>{post.frontmatter.description}</p>
				</li>
			))
		}
	</ul>
</Layout>
